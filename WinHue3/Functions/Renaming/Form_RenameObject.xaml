<Window
    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
    x:Name="FormRenameObject" 
    x:Class="WinHue3.Functions.Renaming.Form_RenameObject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:WinHue3.Resources"
        Title="{x:Static resx:GUI.RenameObjectForm_Title}" Height="104" Width="373" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Label Content="{x:Static resx:GUI.RenameObjectForm_NewName}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBox x:Name="TbNewName" HorizontalAlignment="Left" Height="23" Margin="87,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="261"/>
        <Button x:Name="BtnRename" Content="{x:Static resx:GUI.RenameObjectForm_RenameButton}" HorizontalAlignment="Left" Margin="193,38,0,0" VerticalAlignment="Top" Width="75" Click="btnRename_Click"/>
        <Button x:Name="BtnCancel" Content="{x:Static resx:GUI.Button_Cancel}" HorizontalAlignment="Left" Margin="273,38,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
