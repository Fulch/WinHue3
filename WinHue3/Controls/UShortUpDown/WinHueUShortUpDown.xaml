<UserControl x:Class="WinHue3.Controls.UShortUpDown.WinHueUShortUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinHue3.Controls"
             mc:Ignorable="d" Height="20.936" Width="115.848" LostFocus="UserControl_LostFocus"
             x:Name="ctlNUD" MinHeight="20">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="{Binding ElementName=ctlNUD, Path=ActualHeight }" Width="{Binding ElementName=ctlNUD, Path=ActualWidth}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="18"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="tbValue" TextWrapping="Wrap" HorizontalContentAlignment="Right"  VerticalContentAlignment="Center" TextChanged="TbValue_TextChanged" Grid.Column="0" BorderThickness="1,1,0,1" PreviewKeyUp="TbValue_PreviewKeyUp" PreviewKeyDown="TbValue_PreviewKeyDown" MaxLength="5" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RepeatButton x:Name="btnIncrement" Click="BtnIncrement_Click" HorizontalContentAlignment="Center"  Grid.Row="0">
                <Path Data="M 0 6 L 12 6 L 6 0 Z">
                    <Path.Style>
                        <Style TargetType="{x:Type Path}">
                            <Setter Property="Fill" Value="Black"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEnabled, ElementName=btnIncrement}" Value="False">
                                    <Setter Property="Fill" Value="DarkGray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>

            </RepeatButton>
            <RepeatButton x:Name="btnDecrement" Click="BtnDecrement_Click" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  >
                <Path Data="M 0 0 L 6 6 L 12 0 Z">
                    <Path.Style>
                        <Style TargetType="{x:Type Path}">
                            <Setter Property="Fill" Value="Black"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEnabled, ElementName=btnDecrement}" Value="False">
                                    <Setter Property="Fill" Value="DarkGray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
            </RepeatButton>
        </Grid>
    </Grid>
</UserControl>
